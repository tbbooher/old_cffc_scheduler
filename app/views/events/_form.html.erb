<% semantic_form_remote_for @event, :url => {:action => :create}, :before => "$('#creating_events').show();", :complete => "$('#creating_events').hide();" do |f| %>
    <% f.inputs do %>
        <%= f.input :coaches, :as => :check_boxes %>
        <%= f.input :title, :input_html => {:style => "width:65%;"} %>
        <%= f.input :event_type_id, :include_blank => false %>
        <%= f.input :start_time, :label => "Start Time", :default => Time.now %>
        <%= f.input :end_time, :label => "End Time" %>
        <%= f.input :description, :input_html => {:rows => 2, :cols => 30}  %>
        <%= f.input :all_day %>
    <% end %>
    <%= f.hidden_field :id, :value => @event.id %>
    <%= f.buttons %>
    <span id = "creating_events" style = "display:none;">Creating, Please wait...</span>
<%end %>