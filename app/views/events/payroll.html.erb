<% title 'Payroll for #the month' %>
<table style="width:80%">
  <th>Coach</th>
  <% @types.each do |event_type| %>
     <th><%= event_type %></th>
  <% end %>
  <% @trainers.each do |name, hash| %>
      <tr>
        <td><%= name %></td>
        <% @types.each do |event_type| %>        
            <td><%=h hash[event_type.to_sym] %></td>
        <% end %>
      </tr>
  <% end %>
</table>