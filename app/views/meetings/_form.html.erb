<% semantic_form_for @meeting do |f| %>
   <% f.inputs do %>
     <%= f.input :trainers, :as => :check_boxes %>
     <%= f.input :meeting_type_id, :include_blank => false %>
     <%= f.input :time_slot_id, :collection => TimeSlot.all.map{|ts| ts.start_time.strftime('%H:%M')}, :include_blank => false %>
     <%= f.input :meeting_date, :start_year => Date.today.year %>
     <%= f.input :duration %>
   <% end %>
   <%= f.buttons %>
<% end %>
